<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_iuran"
    android:layout_marginVertical="10dp">

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_10"/>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggal_iuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Mei 2021"
                android:fontFamily="@font/medium"
                android:textSize="12sp"
                android:textColor="@color/blackfont"/>

            <TextView
                android:id="@+id/kategori_iuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iuran Sampah"
                android:textSize="14sp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/blackfont"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_user2"/>

                <TextView
                    android:id="@+id/pegawai_iuran"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pegawai : Nouval Rizky"
                    android:textSize="10sp"
                    android:textColor="@color/blackfont"
                    android:fontFamily="@font/medium"/>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/medium"
                android:textSize="10sp"
                android:textColor="@color/blackfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:textColor="@color/blackfont"
                android:fontFamily="@font/semibold"
                android:textSize="14sp"
                android:id="@+id/harga_iuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.20000"/>



        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#C6C6C6"/>


    </LinearLayout>


</LinearLayout>



