<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_iuran"
    android:layout_marginVertical="10dp">

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_18"/>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/periode_kontrak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periode 24 Mei 2021 - 12 Agustus 2023"
                android:textSize="14sp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/blackfont"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_calendar2" />

                    <TextView
                        android:id="@+id/tanggal_bayar_kontrak"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl. Bayar : 19 Juni 2021"
                        android:textSize="10sp"
                        android:textColor="@color/blackfont"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_user2"/>

                    <TextView
                        android:id="@+id/admin_kontrak"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin : Nouval Rizky"
                        android:textSize="10sp"
                        android:textColor="@color/blackfont"
                        android:fontFamily="@font/medium"/>
                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/medium"
                    android:textSize="10sp"
                    android:textColor="@color/blackfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:textColor="@color/blackfont"
                    android:fontFamily="@font/semibold"
                    android:textSize="14sp"
                    android:id="@+id/harga_kontrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.20000"/>



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>



