<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto_pemilik"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sinar_plastik"/>

                <LinearLayout
                    android:layout_marginLeft="56dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_lapak"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lapak"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/blackfont"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nama_pemilik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemilik"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/dark_grey"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/badgeKategori"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_green">

                    <TextView
                        android:id="@+id/textBadgeKategori"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sayuran"
                        android:fontFamily="@font/semibold"
                        android:textSize="10sp"/>

                </LinearLayout>

        </FrameLayout>





        </LinearLayout>



</androidx.cardview.widget.CardView>